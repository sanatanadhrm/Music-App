{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    
    "rules": {
        "import/no-extraneous-dependencies": "off",
        "strict": ["error", "global"],
        "no-console": "off",
        "eol-last" : ["error", "always"],
        "no-underscore-dangle" : "off",
        "camelcase":"off",
        "prefer-const":"off",
        "no-else-return":"off"
      }
      
}